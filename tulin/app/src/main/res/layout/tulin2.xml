<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rectange"
    android:orientation="vertical"
    tools:context="com.vany.tulin.controller.MainActivity">

    <TextView
        android:id="@+id/chatTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="19:48" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/dialog"
            android:orientation="vertical">

            <TextView
                android:id="@+id/robotTextTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingLeft="60dp"
                android:paddingRight="50dp"
                android:paddingTop="50dp"
                android:text="你知我很爱你的你的四接带你飞收到货你返回接口" />

            <TextView
                android:id="@+id/roboturlTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                android:paddingLeft="60dp"
                android:paddingRight="50dp"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <TextView
            android:id="@+id/robotimgTV"
            android:layout_width="47dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:background="@mipmap/beauty"
            android:textColor="@color/colorxianlan" />
    </LinearLayout>

</LinearLayout>
